<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shine & Grow - Digital Learning</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <meta name="description" content="Empower youth with simple digital content. No sign-in needed. Read, grow, and succeed with Blogger-powered content and social media support.">
</head>
<body class="bg-white text-gray-800 font-sans">

  <!-- ✅ HEADER -->
  <header class="bg-gray-900 text-white py-6 px-4">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">Shine & Grow</h1>
      <nav class="space-x-4">
        <a href="#blog" class="hover:text-yellow-300">Blog</a>
        <a href="#contact" class="hover:text-yellow-300">Contact</a>
      </nav>
    </div>
  </header>

  <!-- ✅ HERO SECTION -->
  <section class="text-center py-20 px-6 bg-gradient-to-br from-yellow-100 to-white">
    <div class="max-w-2xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">Empowering Youth Through Simple Digital Content</h2>
      <p class="text-lg text-gray-600 mb-8">
        Easy content powered by Blogger and social media. No sign-in needed. Learn. Fix. Grow.
      </p>
      <a href="#blog" class="inline-block bg-yellow-400 text-gray-900 font-semibold py-3 px-6 rounded-xl shadow hover:bg-yellow-500 transition">
        Read Latest Posts
      </a>
    </div>
  </section>

  <!-- ✅ BLOG SECTION -->
  <section id="blog" aria-labelledby="blogTitle" class="py-16 px-4 bg-white">
    <h2 id="blogTitle" class="text-3xl font-bold text-center mb-12">Latest Simple Language Posts</h2>
    <div id="blogFeed" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto" role="list">
      <!-- Blog posts load here -->
    </div>
  </section>

  <!-- ✅ CONTACT / CTA SECTION -->
  <section id="contact" class="py-20 px-6 bg-gray-100 text-center">
    <div class="max-w-2xl mx-auto">
      <h3 class="text-2xl font-bold mb-4">Want More Simple Language Content?</h3>
      <p class="mb-6 text-gray-600">Sign up to receive useful updates and free learning tips straight to your inbox.</p>
      <!-- Replace with Mailchimp form or embed -->
      <form class="flex flex-col sm:flex-row justify-center gap-4">
        <input type="email" placeholder="Your email" class="px-4 py-3 rounded-xl border w-full sm:w-2/3" required>
        <button type="submit" class="bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-semibold px-6 py-3 rounded-xl shadow">
          Subscribe
        </button>
      </form>
    </div>
  </section>

  <!-- ✅ FOOTER -->
  <footer class="bg-gray-900 text-gray-300 py-6 text-center">
    <p>&copy; 2025 Shine & Grow. Powered by Blogger, Tailwind CSS & Cloudflare Pages.</p>
  </footer>

  <!-- ✅ BLOGGER FEED SCRIPT -->
  <script>
    const blogFeed = document.getElementById("blogFeed");
    const bloggerFeedUrl = "https://yourblogname.blogspot.com/feeds/posts/default?alt=json&max-results=3"; // Replace with your blog

    fetch(bloggerFeedUrl)
      .then(res => res.json())
      .then(data => {
        const entries = data.feed.entry || [];
        entries.forEach(entry => {
          const title = entry.title.$t;
          const link = entry.link.find(l => l.rel === 'alternate').href;
          const published = new Date(entry.published.$t).toLocaleDateString();

          const postHTML = `
            <a href="${link}" target="_blank" rel="noopener noreferrer"
              class="block p-6 bg-gray-50 rounded-xl shadow hover:shadow-lg transition">
              <h3 class="text-xl font-semibold text-gray-800 mb-2">${title}</h3>
              <p class="text-sm text-gray-500">${published}</p>
            </a>
          `;
          blogFeed.innerHTML += postHTML;
        });
      })
      .catch(err => {
        blogFeed.innerHTML = "<p class='text-center text-red-500'>Unable to load posts.</p>";
        console.error("Error fetching Blogger feed:", err);
      });
  </script>

</body>
</html>
